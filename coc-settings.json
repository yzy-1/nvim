{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": [
        "--background-index"
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/",
        ".root",
        ".project"
      ],
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ]
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh",
        "bash"
      ],
      "ignoredRootPaths": []
    }
  },
  "explorer.keyMappingMode": "none",
  "explorer.width": 40,
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings": {
    "k": "nodePrev",
    "j": "nodeNext",
    "*": "toggleSelection",
    "<tab>": "actionMenu",
    "h": "collapse",
    "l": "expand",
    "gl": "expandRecursive",
    "gh": "collapseRecursive",
    "L": "open",
    "s": "openInVsplit",
    "t": "openInTab",
    "H": "gotoParent",
    "Y": "copyFilepath",
    "y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",
    ".": "toggleHidden",
    "R": "refresh",
    "?": "help",
    "q": "quit",
    "f": "search",
    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer"
  },
  "explorer.file.columns": [
    "selection",
    "clip",
    "diagnosticError",
    "indent",
    "icon",
    "filename"
  ]
}

{
  // preferences
  "coc.preferences.hoverTarget": "preview",
  "coc.preferences.enableFloatHighlight": true,

  // trigger
  "suggest.noselect": false,

  // diagnostic
  "diagnostic.infoSign": "I>",
  "diagnostic.hintSign": "H>",
  "diagnostic.warningSign": "W>",
  "diagnostic.errorSign": "E>",
  "diagnostic.enable": true,
  "diagnostic.signOffset": 9999999,
  "diagnostic.highlightOffset": 9999999,
  "diagnostic.refreshAfterSave": false,

  // source
  "coc.source.around.enable": false,
  "coc.source.buffer.enable": false,
  "yank.enableCompletion": false,

  // suggest
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  "suggest.snippetIndicator": "â–º",
  "suggest.disableMenuShortcut": true,
  "suggest.disableMenu": true,
  "suggest.detailMaxLength": 60,
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,
  "suggest.detailField": "preview",

  // snippets
  "snippets.loadFromExtensions": false,

  // format
  "coc.preferences.formatOnSaveFiletypes": [],

  // explorer
  "explorer.keyMappingMode": "none",
  "explorer.width": 40,
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings": {
    "i": "unmap",
    "<tab>": "actionMenu",
    "<Space>": "toggleSelection",
    "k": "nodePrev",
    "j": "nodeNext",
    "h": "collapse",
    "H": "gotoParent",
    "l": ["expandable?", "expand", "open"],
    "L": "open",
    "J": ["toggleSelection", "nodeNext"],
    "K": ["toggleSelection", "nodePrev"],
    "gl": "expandRecursive",
    "gh": "collapseRecursive",
    "o": "expandOrCollapse",
    "<cr>": "open",
    "sl": "open:split",
    "E": "open:vsplit",
    "t": "open:tab",
    "yp": "copyFilepath",
    "yn": "copyFilename",
    "yy": "copyFile",
    "dd": "cutFile",
    "pp": "pasteFile",
    "dD": "deleteForever",
    "V": "addFile",
    "m": "addDirectory",
    "cw": "rename",
    ".": "toggleHidden",
    "R": "refresh",
    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer"
  },
  // html
  "html.suggest.angular1": false, // angular1 is outdate

  // javascript
  "javascript.referencesCodeLens.enable": true,
  "javascript.showUnused": true,
  "javascript.suggest.names": true,
  "javascript.suggestionActions.enabled": true,
  "json.format.enable": false,

  // emeet
  "emmet.showAbbreviationSuggestions": true,

  // vimlsp
  "vimlsp.indexes.runtimepath": true,
  "vimlsp.indexes.gap": 10,
  "vimlsp.indexes.count": 3,
  "vimlsp.suggest.fromVimruntime": true,
  "vimlsp.suggest.fromRuntimepath": false,

  // languageserver
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".root", ".project", ".ccls", ".ccls-root", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "clang": {
          "resourceDir": "/usr/lib/clang/9.0.1"
        }
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh",
        "bash"
      ],
      "ignoredRootPaths": []
    }
  }
}
